// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DB_PATH")
}

model User {
  discordId String  @unique @map("discordID")
  robloxId  Int?    @unique @map("robloxID")
  banned    Boolean @default(false)
}

model Bot {
  clientId      String @unique @map("clientID")
  recentRelease Int?   @unique
}

model Code {
  robloxId Int      @unique @map("robloxID")
  code     Int      @unique
  expiry   DateTime
}

model Guild {
  guildId String @id @unique @map("guildID")

  // Devforum Notifier
  robloxUpdates  String? @map("rbxUpdates")
  robloxReleases String? @map("rbxReleases")

  // Reaction Roles
  allRole     String?
  updateRole  String?
  releaseRole String?

  // Verification System
  verifyEnabled   Boolean? @default(false)
  verifyEmbedId   String?  @map("verifyEmbedID")
  verifiedRole    String?
  devMemberRole   String?
  devRegularRole  String?
  robloxStaffRole String?  @map("rbxStaffRole")
}
